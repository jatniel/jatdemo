{
    "name": "jatdemo/hello",
    "type": "library",
    "description": "A simple Hello World dev package",
    "keywords": ["php","package","demo","hello"],
    "homepage": "https://github.com/jatniel/jatdemo",
    "license": "MIT",
    "version": "1.1.0",
    "authors": [
        {
            "name": "Jatniel Guzm√°n",
            "email": "jatniel.guzman@gmail.com",
            "homepage": "https://jatniel.dev",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "JatDemo\\": "src/"
        }
    },
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.88"
    },
    "autoload-dev": {
        "psr-4": {
            "JatDemo\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "format": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse src",
        "test": "vendor/bin/phpunit tests"
    }
}
